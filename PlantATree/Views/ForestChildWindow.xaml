<sdk:ChildWindow	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:sdk="http://schemas.microsoft.com/winfx/2006/xaml/presentation/sdk"	x:Class="PlantATree.ForestChildWindow"
	Title="ForestChildWindow"
	Width="400" Height="300" Style="{StaticResource ForestChildWindowStyle}" OverlayBrush="{x:Null}">
	<Grid x:Name="LayoutRoot">
		<Grid.RowDefinitions>
			<RowDefinition />
			<RowDefinition Height="Auto" />
		</Grid.RowDefinitions>

		<Button x:Name="OKButton" Content="OK" Click="OKButton_Click" Width="75" Height="23" Margin="0,0,79,0" HorizontalAlignment="Right" Grid.Row="1" Style="{StaticResource PaperDarkButtonStyle}" />
		<Button x:Name="CancelButton" Content="Cancel" Click="CancelButton_Click" Width="75" Height="23" HorizontalAlignment="Right" Grid.Row="1" Style="{StaticResource PaperDarkButtonStyle}" />
		<TextBlock HorizontalAlignment="Left" Margin="0,0,0,1" Grid.Row="1" TextWrapping="Wrap" Text="100% Recycled paper" Width="167" FontSize="8" Height="12" VerticalAlignment="Bottom"/>
	</Grid>
</sdk:ChildWindow>