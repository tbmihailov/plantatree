<UserControl
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	mc:Ignorable="d"
	x:Class="PlantATree.RecycledMarkControl"
	d:DesignWidth="120" d:DesignHeight="20">

	<Grid x:Name="LayoutRoot">
		<StackPanel Orientation="Horizontal" Margin="0,0,29,0" d:LayoutOverrides="HorizontalMargin" Width="90">
			<Image Width="15" Height="15" Margin="3,3,0,3"
				Source="/PlantATree;component/Assets/Media/recycle-icon.png" />
			<TextBlock Text="100% Recycled paper" Margin="3" FontSize="6" VerticalAlignment="Center"/>
		</StackPanel>
	</Grid>	
</UserControl>